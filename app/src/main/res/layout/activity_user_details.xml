<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userDetails">

    <fragment
        android:name="com.app.grocer.SearchBarFragment"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/username"
        android:editable="false"/>

    <EditText
        android:id="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:lines="3"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_200sdp"
        android:layout_below="@id/username"
        android:hint="@string/address"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:hint="@string/contact"
        android:inputType="phone">

    </EditText>


    <TextView
        android:id="@+id/langtv"
        android:layout_below="@id/phone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_language"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/langtv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/language_selector"

        />


    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_below="@id/language_selector"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/addtocart_background"
        android:textColor="#ffffff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_20sdp"
        android:gravity="center"
        android:layout_below="@id/save_button"
        android:text="@string/recent_order"
        android:textStyle="bold"
        android:textColor="#000000"
        android:shadowColor="@color/colorAccent"
        android:background="@android:drawable/dialog_holo_light_frame"

        />

</RelativeLayout>
</ScrollView>